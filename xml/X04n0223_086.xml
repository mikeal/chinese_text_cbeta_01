<lb ed="X" n="0582a04"/><lb ed="R006" n="0841a04"/><entry rend="margin-left:1em"><form>寡</form><cb:def><p xml:id="pX04p0582a0402" rend="inline"><note place="inline">許覲切</note>。</p></cb:def></entry><entry cb:place="inline" rend="margin-left:1em"><form>顰</form><cb:def><p xml:id="pX04p0582a0406" rend="inline"><note place="inline">脾仁切</note>。</p></cb:def></entry><entry cb:place="inline" rend="margin-left:1em"><form>諮</form><cb:def><p xml:id="pX04p0582a0410" rend="inline"><note place="inline">子辭切</note>。</p></cb:def></entry><entry cb:place="inline" rend="margin-left:1em"><form>頑</form><cb:def><p xml:id="pX04p0582a0414" rend="inline"><note place="inline">五還切</note>。</p></cb:def></entry><entry cb:place="inline" rend="margin-left:1em"><form>很</form><cb:def><p xml:id="pX04p0582a0418" rend="inline"><note place="inline">乎懇切</note>。</p></cb:def></entry><entry cb:place="inline" rend="margin-left:1em"><form>醒</form><cb:def><p xml:id="pX04p0582a0422" rend="inline"><note place="inline">桑形切</note>。</p></cb:def></entry><entry cb:place="inline" rend="margin-left:1em"><form>徒</form>
