<note n="0348001" resp="#resp2" place="foot text" type="orig" target="#nkr_note_orig_0348001">夫一作然</note>
<note n="0348002" resp="#resp2" place="foot text" type="orig" target="#nkr_note_orig_0348002">昧一作暗</note>
