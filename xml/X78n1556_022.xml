<choice cb:resp="#resp1" cb:from="#beg_1c0" cb:to="#end_1c0"><corr>已</corr><sic>巳</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1c1" cb:to="#end_1c1"><corr>己</corr><sic>巳</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1c2" cb:to="#end_1c2"><corr>策</corr><sic><g ref="#CB15081">䇿</g></sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1c3" cb:to="#end_1c3"><corr>已</corr><sic>巳</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1c4" cb:to="#end_1c4"><corr>已</corr><sic>巳</sic></choice>
