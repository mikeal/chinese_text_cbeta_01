<choice cb:resp="#resp1" cb:from="#beg_1c4" cb:to="#end_1c4"><corr>斂</corr><sic>歛</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1c5" cb:to="#end_1c5"><corr>已</corr><sic>巳</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1c6" cb:to="#end_1c6"><corr>己</corr><sic>已</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1c7" cb:to="#end_1c7"><corr>己</corr><sic>已</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1c8" cb:to="#end_1c8"><corr>己</corr><sic>已</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1c9" cb:to="#end_1c9"><corr>已</corr><sic>巳</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_1ca" cb:to="#end_1ca"><corr>已</corr><sic>巳</sic></choice>
