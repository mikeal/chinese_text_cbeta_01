<choice cb:resp="#resp1" cb:from="#beg_ee" cb:to="#end_ee"><corr>己</corr><sic>已</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_ef" cb:to="#end_ef"><corr>已</corr><sic>巳</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_f0" cb:to="#end_f0"><corr>己</corr><sic>已</sic></choice>
<choice cb:resp="#resp1" cb:from="#beg_f1" cb:to="#end_f1"><corr>已</corr><sic>巳</sic></choice>
