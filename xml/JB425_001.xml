<pb ed="J" xml:id="J38.B425.0627a" n="0627a"/>
<lb ed="J" n="0627a01"/><milestone unit="juan" n="1"/><cb:div type="other"><cb:mulu type="其他" level="1">像</cb:mulu>
<lb ed="J" n="0627a02"/><p xml:id="pJ38p0627a0201"><figure><graphic url="../figures/J/J38p0627_01.gif"></graphic></figure></p></cb:div>
<lb ed="J" n="0627a03"/>
<lb ed="J" n="0627a04"/>
<lb ed="J" n="0627a05"/>
<lb ed="J" n="0627a06"/>
<lb ed="J" n="0627a07"/>
<lb ed="J" n="0627a08"/>
